<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrarse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/architects_daughter"
            android:text="Registrarse"
            android:textAlignment="center"
            android:textColor="@color/button_background"
            android:textSize="40sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/architects_daughter"
                android:text="Nombres"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/nombres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:textStyle="bold"
                android:hint="Nombres"
                android:textSize="18sp"
                android:inputType="text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/architects_daughter"
                android:text="Apellidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/apellidos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="30dp"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:hint="Apellidos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/architects_daughter"
                android:text="Celular"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/celular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:hint="1234567890"
                android:inputType="phone"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/architects_daughter"
                android:text="Correo"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/correo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/architects_daughter"
                android:hint="ejemplo@correo.com"
                android:textSize="18sp"
                android:inputType="textEmailAddress"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/architects_daughter"
                android:text="Contraseña"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp">

                <EditText
                    android:id="@+id/contrasena"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:fontFamily="@font/architects_daughter"
                    android:hint="Contraseña"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/passwordNoVisibility"
                    android:layout_width="61dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/baseline_visibility_off_24" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="290dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/architects_daughter"
                android:text="Confirmar Contraseña"
                android:layout_marginStart="30dp"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="30dp">

                <EditText
                    android:id="@+id/confirmarContrasena"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:fontFamily="@font/architects_daughter"
                    android:hint="Contraseña"
                    android:textSize="18sp"
                    android:inputType="textPassword"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/passwordVisibilityOff"
                    android:layout_width="61dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:src="@drawable/baseline_visibility_off_24" />

            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/errores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:lineSpacingExtra="8sp"
            android:padding="5dp"
            android:text="Errores"
            android:textColor="#B71C1C"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp" />

            <TextView
                android:id="@+id/terminos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                android:fontFamily="@font/architects_daughter"
                android:text="Acepto los Términos de Servicio y Política de Privacidad"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/registrar"
                android:layout_width="140dp"
                android:layout_height="61dp"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_tip"
                android:backgroundTint="@color/button_background"
                android:fontFamily="@font/architects_daughter"
                android:text="Registrar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/continuar"
                android:layout_width="140dp"
                android:layout_height="61dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_tip"
                android:backgroundTint="@color/button_background"
                android:fontFamily="@font/architects_daughter"
                android:text="Continuar"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="355dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="222dp"
                app:srcCompat="@drawable/logo2" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="224dp" />

</androidx.constraintlayout.widget.ConstraintLayout>